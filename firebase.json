{
  "hosting": {
    "public": "dist/FOO",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{
      "source":"**",
      "headers": [
        {"key":"Content-Security-Policy","value":"default-src 'none'; img-src 'self'; script-src 'self'; style-src 'self'"},
        {"key": "X-Frame-Options", "value": "sameorigin"},
        {"key": "X-Content-Type-Options", "value": "nosniff"},
        {"key": "X-UA-Compatible", "value": "ie=edge"},
        {"key": "X-XSS-Protection", "value": "1; mode=block"}
      ]
    }],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
